<script>
  $(function() {
    $('.lessons').sortable({
      update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        });
      }
    });
    $('.sections').sortable({
        update: function( event, ui ) {
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        });
      }
    })
   });
</script>

<br />
<div class="places-box col-10 offset-1">
  <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= image_tag current_course.image.url, class: "classimg img-fluid" unless current_course.image.url.nil? %>
  <br />
  <div class="text-center">
    <br />
      <ul class="sections">
      <% current_course.sections.rank(:row_order).each do |section| %>
        <li data-update-url="<%= instructor_section_path(section) %>" class="section-li text-center">
            <div class="header">
                <i class="fab fa-centos"></i>
                <h2><b><%= section.title %></b></h2>
            </div>
          <ul class="lessons">
              <% section.lessons.rank(:row_order).each do |lesson| %>
              <li data-update-url="<%= instructor_lesson_path(lesson) %>">
                <div class="row">
                  <div class="col-1">
                    <i class="fas fa-arrow-circle-right"></i>
                  </div>
                  <div class="col-8 offset-1 text-center">
                  <%= link_to lesson_path(lesson) do %>
                    <p><b><%= lesson.title %></b></p>
                    <p><%= lesson.subtitle %></p>
                  <% end %>
                  </div>
                </div>
              </li>
              <% end %>
              <br />
           </ul>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'btn btn-primary btn-sm' %>
        </li>
        <br />
      <% end %>
      </ul>
    <br />
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary' %>
    <br />
    <br />
    <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning' %>
  <br class="clr" />
  </div>
  <br />
</div>
  

